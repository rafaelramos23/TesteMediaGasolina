<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtGasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Informe o valor da gasolina"
        android:inputType="numberDecimal"
        android:text="" />

    <EditText
        android:id="@+id/edtEtanol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Informe o valor do etanol"
        android:inputType="numberDecimal"
        android:text="" />

    <Button
        android:id="@+id/btnCalcCombustivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular" />

    <TextView
        android:id="@+id/txtResulCombustivel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/btnvoltar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar a tela Inicial" />
</LinearLayout>