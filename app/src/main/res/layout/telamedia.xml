<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/edtP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Informe a Nota da P1"
        android:inputType="number"
        android:text="" />



    <EditText
        android:id="@+id/edtProjeto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Informe a nota do projeto"
        android:inputType="number"
        android:text="" />



    <EditText
        android:id="@+id/edtLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite a pontuação com listas"
        android:inputType="number"
        android:text="" />

    <Button
        android:id="@+id/btnCalcMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Média" />

    <TextView
        android:id="@+id/txtResulMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado" />

    <Button
        android:id="@+id/btnvoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar tela principal" />
</LinearLayout>